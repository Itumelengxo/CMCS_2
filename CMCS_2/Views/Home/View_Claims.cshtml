@model CMCS_2.Models.Get_Claims

<!-- Custom CSS Styling -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #eef2f3; /* Light grey-blue background */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .claims-container {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Slight shadow */
        width: 80%;
        padding: 20px;
        margin: 50px auto; /* Centering the table */
    }

    h2 {
        text-align: center;
        color: #4CAF50; /* Green heading */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    thead th {
        background-color: #4CAF50; /* Green background for table headers */
        color: white;
        padding: 10px;
        text-align: left;
    }

    tbody tr {
        border-bottom: 1px solid #ddd;
    }

    tbody td {
        padding: 10px;
        text-align: left;
        color: #555;
    }

    tbody tr:hover {
        background-color: #f1f1f1; /* Row highlight on hover */
    }

    a {
        color: #4CAF50;
        text-decoration: none;
    }

        a:hover {
            color: #45a049; /* Darker green on hover */
        }

    .no-claims-message {
        text-align: center;
        color: #999;
    }
</style>

<!-- Claims Table -->
<div class="claims-container">
    <h2>View Claims</h2>

    @if (@Model.Email.Count > 0)
    {
        <table>
            <thead>
                <tr>
                    <th>User Email</th>
                    <th>Module</th>
                    <th>Hours Worked</th>
                    <th>Hour Rate</th>
                    <th>Note</th>
                    <th>Total Amount</th>
                    <th>Status</th>
                    <th>Download</th>
                </tr>
            </thead>

            <tbody>
                @for (int count = 0; count < @Model.Email.Count; count++)
                {
                    <tr>
                        <td>@Model.Email[count]</td>
                        <td>@Model.Module[count]</td>
                        <td>@Model.Hours[count]</td>
                        <td>@Model.Rate[count]</td>
                        <td>@Model.Note[count]</td>
                        <td>@Model.Total[count]</td>
                        <td>@Model.Status[count]</td>
                        <td>
                            <a href="@Url.Content("~/pdf/" + @Model.Filename[count])" target="_blank">
                                Download File
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="no-claims-message">No claims available at the moment.</p>
    }
</div>
