@model CMCS_2.Models.Claim

@{
    ViewData["Title"] = "Dashboard Page";
}

<!-- Custom CSS Styling -->
<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f7f7f7; /* Light grey background */
        color: #333;
        margin: 0;
        padding: 0;
    }

    .dashboard-container {
        background-color: #fff; /* White background for the form */
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Slight shadow */
        width: 400px;
        padding: 20px;
        margin: 50px auto; /* Centering the form */
        text-align: left;
    }

    h2 {
        text-align: center;
        color: #4CAF50; /* Green heading */
    }

    label {
        display: block;
        margin: 10px 0 5px;
        color: #555;
    }

    input[type="text"],
    textarea,
    input[type="file"] {
        width: 100%;
        padding: 10px;
        margin: 5px 0;
        border-radius: 5px;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    input[type="submit"] {
        background-color: #4CAF50; /* Green submit button */
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        width: 100%;
        margin-top: 15px;
    }

        input[type="submit"]:hover {
            background-color: #45a049; /* Darker green on hover */
        }

    .navigation {
        text-align: center;
        margin-bottom: 20px;
    }

        .navigation a {
            text-decoration: none;
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            margin: 5px;
            display: inline-block;
        }

            .navigation a:hover {
                background-color: #45a049;
            }
</style>

<!-- Navigation Links -->
<div class="navigation">
    <a href="/Home/View_Claims/">View Claims</a>
    <a href="/Home/Approve/">Approve Claim</a>
</div>

<!-- Dashboard Form -->
<div class="dashboard-container">
    <h2>Submit Claim</h2>
    <form method="post" asp-action="Claim_Sub" enctype="multipart/form-data">
        <label>Module name</label>
        <input type="text" asp-for="User_Name" required />
        <br />

        <label>Hours Worked</label>
        <input type="text" asp-for="Hours_worked" required />
        <br />

        <label>Hours per rate on module</label>
        <input type="text" asp-for="Hour_Rate" required />
        <br />

        <label>Description</label>
        <textarea asp-for="Description" required></textarea>
        <br />

        <label>Upload file [optional]</label>
        <input type="file" name="File" />
        <br />

        <input type="submit" value="Submit claim" />
    </form>
</div>

